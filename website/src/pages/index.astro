---
import Base from '../layouts/Base.astro';
import Nav from '../components/Nav.astro';
import Hero from '../components/Hero.astro';
import ProductPreview from '../components/ProductPreview.astro';
import SocialProof from '../components/SocialProof.astro';
import ProblemViz from '../components/ProblemViz.astro';
import ScrollTerminal from '../components/ScrollTerminal.astro';
import HowItWorks from '../components/HowItWorks.astro';
import EncryptionViz from '../components/EncryptionViz.astro';
import FeatureGrid from '../components/FeatureGrid.astro';
import SecurityBlock from '../components/SecurityBlock.astro';
import AIModeSection from '../components/AIModeSection.astro';
import Integrations from '../components/Integrations.astro';
import ComparisonTable from '../components/ComparisonTable.astro';
import Testimonials from '../components/Testimonials.astro';
import Pricing from '../components/Pricing.astro';
import FAQ from '../components/FAQ.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';

/*
  Section order (Evil Martians study + developer marketing research):
  1. Hero — problem agitation + value prop + CTAs
  2. Product Preview — dashboard mockup (proves the product is real)
  3. Social Proof Bar — verifiable trust badges
  4. Problem Viz — side-by-side before/after (the "oh no" moment)
  5. Scroll Terminal — interactive demo (the "oh shit, that's easy" moment)
  6. How It Works — 3-step conceptual flow
  7. Encryption Viz — character scramble animation
  8. Feature Grid — capabilities
  9. Security Block — trust signals (critical for security product)
  10. AI Mode — upsell to Pro (the differentiator)
  11. Integrations — compatibility ("works with your stack")
  12. Comparison Table — differentiation vs competitors
  13. Testimonials — honest early-stage social proof
  14. Pricing — conversion
  15. FAQ — objection handling
  16. CTA — final conversion
*/
---

<Base title="ZVault — Stop leaking secrets to LLMs">
  <Nav />
  <main>
    <Hero />
    <ProductPreview />
    <SocialProof />
    <ProblemViz />
    <ScrollTerminal />
    <HowItWorks />
    <EncryptionViz />
    <FeatureGrid />
    <SecurityBlock />
    <AIModeSection />
    <Integrations />
    <ComparisonTable />
    <Testimonials />
    <Pricing />
    <FAQ />
    <CTA />
  </main>
  <Footer />

  <script>
    import '../scripts/animations.ts';
  </script>
</Base>
