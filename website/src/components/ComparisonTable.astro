      { feature: 'llms.txt generation', zvault: true, awssm: false, hashicorp: false, infisical: false, doppler: false },
      { feature: '.env import ‚Üí encrypted vault', zvault: true, awssm: false, hashicorp: false, infisical: true, doppler: true },
      { feature: 'Inject secrets at runtime', zvault: true, awssm: true, hashicorp: false, infisical: true, doppler: true },
      { feature: 'Setup time', zvault: '2 min', awssm: '~30 min', hashicorp: 'Hours', infisical: '~15 min', doppler: '~5 min' },
      { feature: 'Secret search from IDE', zvault: true, awssm: false, hashicorp: false, infisical: false, doppler: false },
    ],
  },
  {
    name: 'Security & Encryption',
    rows: [
      { feature: 'Encryption at rest', zvault: 'AES-256-GCM', awssm: 'AWS KMS', hashicorp: 'AES-256-GCM', infisical: 'AES-256-GCM', doppler: 'AES-256' },
      { feature: "Shamir's Secret Sharing", zvault: true, awssm: false, hashicorp: true, infisical: false, doppler: false },
      { feature: 'Key zeroization (memory wipe)', zvault: true, awssm: 'N/A', hashicorp: false, infisical: false, doppler: 'N/A' },
      { feature: 'Constant-time token comparison', zvault: true, awssm: 'N/A', hashicorp: true, infisical: false, doppler: 'N/A' },
      { feature: 'Core dump prevention', zvault: true, awssm: 'N/A', hashicorp: false, infisical: false, doppler: 'N/A' },
      { feature: 'Memory locking (mlockall)', zvault: true, awssm: 'N/A', hashicorp: true, infisical: false, doppler: 'N/A' },
      { feature: 'Pure Rust crypto (no OpenSSL)', zvault: true, awssm: false, hashicorp: false, infisical: false, doppler: false },
      { feature: 'Seal/unseal lifecycle', zvault: true, awssm: false, hashicorp: true, infisical: false, doppler: false },
    ],
  },
  {
    name: 'Architecture',
    rows: [
      { feature: 'Single binary', zvault: true, awssm: false, hashicorp: true, infisical: false, doppler: false },
      { feature: 'Self-hosted option', zvault: true, awssm: false, hashicorp: true, infisical: true, doppler: false },
      { feature: 'Docker required', zvault: false, awssm: 'N/A', hashicorp: false, infisical: true, doppler: 'N/A' },
      { feature: 'Runtime dependencies', zvault: 'None', awssm: 'AWS SDK', hashicorp: 'None', infisical: 'Node+DB+Redis', doppler: 'N/A' },
