    name: 'AI & Developer Experience',
    rows: [
      { feature: 'AI Mode (MCP server)', zvault: true, awssm: false, hashicorp: false, infisical: false, doppler: false },
      { feature: 'zvault:// secret references', zvault: true, awssm: false, hashicorp: false, infisical: false, doppler: false },
