---
interface Row {
  feature: string;
  zvault: boolean | string;
  awssm: boolean | string;
  hashicorp: boolean | string;
  infisical: boolean | string;
  doppler: boolean | string;
}

interface Category {
  name: string;
  rows: Row[];
}

const categories: Category[] = [
  {
    name: 'Pricing',
    rows: [
      { feature: 'License', zvault: 'MIT', awssm: 'Proprietary', hashicorp: 'BSL 1.1', infisical: 'MIT Expat', doppler: 'Proprietary' },
      { feature: 'Free tier', zvault: true, awssm: false, hashicorp: false, infisical: true, doppler: true },
      { feature: 'Starting price', zvault: '$12/dev/mo', awssm: '$0.40/secret/mo', hashicorp: '$1.58/hr', infisical: '$9/user/mo', doppler: '$7/user/mo' },
      { feature: 'Self-host free', zvault: true, awssm: false, hashicorp: 'BSL limits', infisical: true, doppler: false },
      { feature: 'Truly open source', zvault: true, awssm: false, hashicorp: false, infisical: true, doppler: false },
    ],
  },
  {
    name: 'Cloud & Environments',
    rows: [
      { feature: 'Cloud-hosted vault', zvault: true, awssm: true, hashicorp: true, infisical: true, doppler: true },
      { feature: 'Multi-environment (dev/staging/prod)', zvault: true, awssm: 'Manual', hashicorp: 'Namespaces', infisical: true, doppler: true },
