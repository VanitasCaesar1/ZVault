---
// Compatibility / integrations block â€” shows what stacks ZVault works with
const integrations = [
  { name: 'Cursor', category: 'IDE' },
  { name: 'Kiro', category: 'IDE' },
  { name: 'VS Code', category: 'IDE' },
  { name: 'Continue', category: 'IDE' },
  { name: 'Node.js', category: 'Runtime' },
  { name: 'Python', category: 'Runtime' },
  { name: 'Go', category: 'Runtime' },
  { name: 'Rust', category: 'Runtime' },
  { name: 'Docker', category: 'Infra' },
  { name: 'GitHub Actions', category: 'CI/CD' },
  { name: 'CircleCI', category: 'CI/CD' },
  { name: 'Railway', category: 'Deploy' },
  { name: 'Vercel', category: 'Deploy' },
  { name: 'Fly.io', category: 'Deploy' },
];
---

<section class="py-16">
  <div class="container">
    <div class="text-center mb-10">
      <h2 class="text-2xl md:text-3xl font-bold tracking-tight mb-3">Works with your stack</h2>
      <p class="text-muted text-base max-w-lg mx-auto">ZVault injects secrets as environment variables. If your app reads env vars, it works with ZVault. No SDK, no vendor lock-in.</p>
    </div>

    <div class="flex flex-wrap items-center justify-center gap-3 max-w-3xl mx-auto">
      {integrations.map((i) => (
        <div class="flex items-center gap-2 px-4 py-2.5 bg-bg-card border border-border rounded-xl text-sm text-muted hover:border-accent/20 hover:text-white transition-all cursor-default">
          <span class="text-dim text-[10px] uppercase tracking-wider">{i.category}</span>
          <span class="w-px h-3 bg-border"></span>
          <span class="font-medium">{i.name}</span>
        </div>
      ))}
    </div>

    <p class="text-center text-dim text-xs mt-6">
      + any language, framework, or platform that reads environment variables
    </p>
  </div>
</section>
