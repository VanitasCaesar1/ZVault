{
  "$schema": "https://schema.railpack.com",
  "provider": "rust",
  "buildAptPackages": ["libclang-dev", "clang", "pkg-config"],
  "steps": {
    "build": {
      "commands": [
        "...",
        "cargo build --release --package vaultrs-server",
        "mkdir -p /app/bin",
        "cp target/release/vaultrs-server /app/bin/vaultrs-server"
      ],
      "deployOutputs": ["/app/bin"]
    }
  },
  "deploy": {
    "aptPackages": ["ca-certificates"],
    "startCommand": "/app/bin/vaultrs-server"
  }
}
